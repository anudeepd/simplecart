<h1 style="color: red; text-shadow: 1px 1px yellow;  "><center>{{title}}</h1>
<p><center>The place where you can get the components for your project</p>
<br><br>

{{# each products }}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
            <p class="description">{{{this.description}}}</p>
            <div class="clearfix">
            <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} Rs.</div>
              <a href="/add/{{ this.id }}" class="btn btn-primary pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
            </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}